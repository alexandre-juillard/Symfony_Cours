{{ form_start(form, {'attr': {'class': 'card p-3 w-75 mx-auto'}}) }}
{{ form_row(form.title) }}
{{ form_row(form.categories) }}

<div class="mb-3">
	<button type="button" class="add_item_link btn btn-secondary" data-collection-holder-class="images-list">Ajouter une image</button>
</div>


<ul class="images-list row justify-content-between align-items-center" data-index="{{ form.images|length > 0 ? form.images|last.vars.name + 1 : 0 }}" data-prototype="{{ form_widget(form.images.vars.prototype)|e('html_attr') }}">
	{% for image in form.images %}
		<li class="col-md-5">
			<button type="button" class="btn btn-danger text-light btn-remove-collection">
				<i class="bi bi-x-octagon-fill"></i>
			</button>
			{{ form_row(image.imageFile) }}</li>
	{% endfor %}
</ul>
{{ form_row(form.description) }}
{{ form_row(form.enable) }}

<button type="submit" class="btn btn-primary">{{ labelButton|default('Save') }}</button>
{{ form_end(form) }}
